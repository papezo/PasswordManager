    /* ===============================
       Vylepšené styly pro validátor hesel
       =============================== */
       
    /* Hlavní pozadí validátoru */
    .main-bg {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    
    /* Moderní validátor s efektem glassmorphism */
    .password-validator-card {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        padding: 40px 30px;
        width: 80vh;
        animation: fadeInUp 0.8s ease-out both;
    }
    
    
    /* Nadpis a popisek validátoru */
    .password-validator-card h1 {
        font-size: 2.4rem;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-bottom: 1rem;
    }
    .password-validator-card p.text-muted {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.75);
        text-align: center;
        margin-bottom: 1.5rem;
    }
    
    /* Vylepšený input pro heslo */
    .input-password {
        border-radius: 8px;
        padding: 0.75rem 1rem;

        background: transparent;
        color: #fff;
        transition: all 0.3s ease;
        width: 100%;
    }
    .input-password::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }
    .input-password:focus {
        color: white;
        border-color: #1A73E8;
        box-shadow: 0 0 8px rgba(26, 115, 232, 0.5);
        background: rgba(255, 255, 255, 0.05);
    }
    
    /* Stylizace prvků skupiny inputů */
    .input-group-text {
        background: transparent;
        border: none;
        color: #ffffff;
    }
    
    /* Progress bar pro zobrazení síly hesla */
    .progress {
        height: 10px;
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.3);
        overflow: hidden;
        margin-bottom: 1rem;
    }
    .progress-bar {
        transition: width 0.5s ease-in-out;
        border-radius: 5px;
    }
    
    /* Styl zpětné vazby */
    #strengthFeedback {
        font-size: 1.2rem;
        font-weight: 600;
        text-align: center;
        color: #fff;
    }

</style>

