<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-50 shadow-lg rounded-4 overflow-hidden">
        <!-- Levý sloupec: Přihlašovací formulář -->
        <div class="col-md-6 p-5 bg-dark-gradient">
            <div class="text-dark">
                <h1 class="text-center mb-4 fw-bold text-white">Welcome Back!</h1>
                <p class="text-center text-white">
                    New to Password Manager? 
                    <a href="/CreateAccount" class="link-primary text-decoration-none">Create an Account</a>
                </p>

                <!-- Chybová hláška -->
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert alert-@messageType d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>@message</div>
                    </div>
                }

                <EditForm Model="@user" OnValidSubmit="Authenticate" FormName="Login">
                    <!-- Username -->
                    <div class="mb-4">
                        <label for="email" class="form-label fw-bold text-white">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <InputText id="email" @bind-Value="user.Username" class="form-control shadow-sm" placeholder="Username" />
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-4">
                        <label for="password" class="form-label fw-bold text-white">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <InputText id="password" @bind-Value="user.Password" class="form-control shadow-sm" placeholder="Password" type="password" />
                        </div>
                    </div>

                    <!-- Přihlašovací tlačítko -->
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">Sign In</button>
                    </div>

                    <!-- Další možnosti -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <InputCheckbox id="rememberMe" @bind-Value="user.rememberMe" class="form-check-input" />
                            <label class="form-check-label ms-2 text-white" for="rememberMe" >Remember Me</label>
                        </div>
                        <a href="/ForgotPassword" class="link-primary text-decoration-none">Forgot Password?</a>
                    </div>
                </EditForm>

                <!-- Divider -->
                <div class="text-center my-4">
                    <div class="divider-text">Or sign in with</div>
                </div>

                <!-- Přihlášení pomocí Google -->
                <button type="button" class="btn btn-outline-dark w-100 py-2 shadow-sm text-white">
                    <img src="/images/google2.png" alt="Google Logo" width="24" height="24" class="me-2">
                    Sign up with Google
                </button>
            </div>
        </div>

        <!-- Pravý sloupec: Informační sekce -->
        <div class="col-md-6 p-5 text-white bg-info-section">
            <h1 class="fw-bold mb-4 text-center">Secure Your Life in Seconds</h1>

            <ul class="list-unstyled">
                <li class="mb-3">
                    <i class="bi bi-check-circle-fill me-2 text-success"></i> Store all your passwords securely in one place.
                </li>
                <li class="mb-3">
                    <i class="bi bi-check-circle-fill me-2 text-success"></i> Generate strong, unique passwords effortlessly.
                </li>
                <li class="mb-3">
                    <i class="bi bi-check-circle-fill me-2 text-success"></i> Access your data from anywhere.
                </li>
                <li class="mb-3">
                    <i class="bi bi-check-circle-fill me-2 text-success"></i> Protect your accounts with 2FA.
                </li>
            </ul>
            <div class="mt-5 text-center">
                <img src="/images/illustration4.svg" alt="Security Illustration" class="img-fluid" style="max-width: 60%;">
            </div>
        </div>
    </div>
</div>

